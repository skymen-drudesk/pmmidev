<div class="cert-test-node">
  <div class="top-banner clearfix">
    {{ field_render([content.image_header, 'img-header']) }}
  </div>
  <div class="container">
    <div class="content-left col-sm-4">
      {% set info = [
        'cert_test_who',
        'cert_test_length',
        'cert_test_time_to_take',
        'cert_test_num_attempts',
      ] %}
      <ul class="cert-info">
        {% for field in info %}
          {{ field_render([content[field], field|clean_class, 'li']) }}
        {% endfor %}
      </ul>
    </div>

    <div class="content-right col-sm-8">
      <h2 class="node-title">
        {{ content.title }}
      </h2>

      {{ field_render([content.image, 'img']) }}

      {{ field_render([content.body, 'node-body']) }}

      {{ field_render([content.cert_test_price, 'price']) }}

      {{ field_render([content.cert_test_text_price, 'text-price']) }}

      {{ field_render([content.link, 'register-link']) }}

      {{ field_render([content.accordions, 'accordion']) }}
    </div>
  </div>
</div>
