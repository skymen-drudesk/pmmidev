#!/usr/bin/env php
<?php
  $path = __DIR__ . "/../";
  echo "Setting permissions of sites/default directory.";
  chmod('docroot/sites/default', 0755);
  echo "Moving Settings Files";
  if (!file_exists($path . "cnf/settings.php")) {
    echo "A Settings file does not exist in cnf/settings.php";
    exit(1);
  }
  copy($path . "cnf/settings.php", $path . "docroot/sites/default/settings.php");
  #symlink("../../../cnf/settings.php", $path . "docroot/sites/default/settings.php");
  if (!file_exists($path . "cnf/services.yml")) {
    echo "A Services file does not exist in cnf/services.yml";
    exit(1);
  }
  copy($path . "cnf/services.yml", $path . "docroot/sites/default/services.yml");
  #symlink("../../../cnf/services.yml", $path . "docroot/sites/default/services.yml");
  if (file_exists($path . "cnf/settings.local.php")) {
      copy($path .  "cnf/settings.local.php", $path . "docroot/sites/default/settings.local.php");
      #symlink("../../../cnf/settings.local.php", $path . "docroot/sites/default/settings.local.php");
  }
